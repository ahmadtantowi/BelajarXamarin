<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CobaUI.CobaUIAbsoluteLayout">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Label Text="Text ini di tengah pada iPhone 4 tapi tidak di perangkat lain" 
                   AbsoluteLayout.LayoutBounds="115,150,100,100" LineBreakMode="WordWrap" />
            <Label Text="Text ini berada di tengah-bawah di setiap perangkat"
                   AbsoluteLayout.LayoutBounds=".5,1,.5,.15" AbsoluteLayout.LayoutFlags="All"
                   LineBreakMode="WordWrap" />
            <BoxView Color="Red" AbsoluteLayout.LayoutBounds="1,.5, 25, 150" 
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView Color="Green" AbsoluteLayout.LayoutBounds="0,.5,25,150"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
            <BoxView Color="Blue" AbsoluteLayout.LayoutBounds=".5,0,150,25"
                     AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>