<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CobaListView.Views.ListItemImageCell">
    <ContentPage.Content>
        <ListView x:Name="listView" ItemsSource="{Binding ListItems}" ItemTapped="ListViewItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell  ImageSource="{Binding Sumber}" Text="{Binding Judul}" Detail="{Binding Deskripsi}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>